{
  "name": "offline-flash-games",
  "productName": "Steve's Offline Flash Games",
  "description": "Steve's Offline Collection of Flash Player Games",
  "keywords": [],
  "main": "./main.js",
  "version": "0.1.1",
  "author": "Steve",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make"
  },
  "dependencies": {
    "@ruffle-rs/ruffle": "^0.2.0-nightly.2025.11.10",
    "electron-squirrel-startup": "^1.0.1"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.10.2",
    "@electron-forge/maker-deb": "^7.10.2",
    "@electron-forge/maker-rpm": "^7.10.2",
    "@electron-forge/maker-squirrel": "^7.10.2",
    "@electron-forge/maker-zip": "^7.10.2",
    "@electron-forge/plugin-auto-unpack-natives": "^7.10.2",
    "@electron-forge/plugin-fuses": "^7.10.2",
    "@electron/fuses": "^1.8.0",
    "electron": "^33.0.0"
  },
  "build": {
    "appId": "com.steve-tech.offline-flash-games",
    "productName": "Steve's Offline Flash Games",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!release-builds${/*}",
      "!dist${/*}",
      "node_modules/@ruffle-rs/ruffle/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "7z",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "mac": {
      "target": "zip"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
